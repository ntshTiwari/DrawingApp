<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--    This item creates the outer border line-->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp"
                android:color="#FF333333"/>

<!--    this is not needed but just to be sure we add this-->
            <padding
                android:bottom="0dp"
                android:top="0dp"
                android:right="0dp"
                android:left="0dp"/>
        </shape>
    </item>

<!--    This makes the slight rounded effect at the corners-->
    <item>
        <shape>
            <stroke android:width="2dp"
                android:color="#FF333333"/>
            <solid android:color="#00000000"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>